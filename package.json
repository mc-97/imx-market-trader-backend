{
  "name": "imx-market-trader-backend",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:mainnet": "npm run copy:mainnet & nest start",
    "start:mainnet:watch": "npm run copy:mainnet & nest start --watch",
    "start:mainnet:debug": "npm run copy:mainnet & nest start --debug --watch",
    "start:mainnet:prod": "npm run copy:mainnet & node dist/main",
    "start:testnet": "npm run copy:testnet & nest start",
    "start:testnet:watch": "npm run copy:testnet & nest start --watch",
    "start:testnet:debug": "npm run copy:testnet & nest start --debug --watch",
    "start:testnet:prod": "npm run copy:testnet & node dist/main",
    "lint": "eslint \"{src,test}/**/*{.ts,.tsx}\"",
    "lint:fix": "eslint \"{src,test}/**/*{.ts,.tsx}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "copy:mainnet": "cp ./config/config.mainnet.yaml ./config/config.yaml",
    "copy:testnet": "cp ./config/config.testnet.yaml ./config/config.yaml"
  },
  "dependencies": {
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@ethersproject/wallet": "^5.7.0",
    "@imtbl/core-sdk": "^0.7.0",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^9.1.6",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.6",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/platform-express": "^9.1.6",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.1.2",
    "bignumber.js": "^9.1.0",
    "bull": "^4.10.1",
    "js-yaml": "^4.1.0",
    "mongoose": "^6.7.0",
    "nest-winston": "^1.8.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.1.6",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.5",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "~4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
